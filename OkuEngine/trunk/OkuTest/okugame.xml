<okugame>
  <engine>
    <renderer type="opengl">
      <fullscreen>no</fullscreen>
      <width>1024</width>
      <height>768</height>
      <depth>no</depth>
      <clearcolor>0,0,0</clearcolor>
      <passes>
        <pass targets="1" />
        <pass targets="1" />
      </passes>
    </renderer>
    <sound type="openal">
      <volume>1.0</volume>
    </sound>
  </engine>
 
  <game>
    <attributes>
      <name>GCC Test</name>
      <startscene>1</startscene> <!-- References scene by id -->
    </attributes>
    
    <behaviors>
      <behavior>
        <id></id>
        <name></name>
        ...
      </behavior>
    </behaviors>
    
    <actortypes>
      <actortype>
        <id>1</id>
        <name>Yin-Yang</name>
        <components>
          <renderable>
            <points>-24,24;24,24;24,-24;-24,-24</points> <!-- A list of vectors for vertex positions -->
            <texcoords>0,1;1,1;1,0;0,0</texcoords> <!-- A list of vectors for vertex texture coordinates -->
            <colors>255,255,255,255;255,255,255,255;255,255,255,255;255,255,255,255;</colors> <!-- A list of colors for vertex colors -->
            <mode>Quads</mode> <!-- The mesh mode (Triangles, Quads, Line...) -->
            <image>yinyang.png</image> <!-- The texture to use (Resource name) -->
          </renderable>
        </components>
      </actortype>
    </actortypes>
    
    <scenes>
      <scene>
        <id>1</id>
        <name>Main Scene</name>
        <layers>
          <layer>
            <id>1</id>
            <name>Layer 01</name>
          </layer>
        </layers>
      </scene>
    </scenes>

    <actors>
      <actor>
        <id>1</id>
        <name>YY01</name>
        <type>1</type> <!-- References the actor type by its id -->
        <scene>1</scene> <!-- References the scene by its id -->
        <layer>1</layer> <!-- References the layer by its id -->
        <parent>0</parent> <!-- References parent actor by actor id -->
        <transform>
          <position>0,0</position>
          <rotation>0</rotation>
          <scale>1,1</scale>
        </transform>
      </actor>
    </actors>

    <!-- WIP! -->
    <actions>
      <action>
        <event>
          <attributes>            
          </attributes>
        </event>
        <process>
          <classname></classname>
          <attributes>
          </attributes>
        </process>
      </action>
    </actions>
   
  </game>
</okugame>