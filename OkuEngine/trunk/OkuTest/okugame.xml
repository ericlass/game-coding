<okugame>
  <engine>
    <renderer type="opengl">
      <fullscreen>no</fullscreen>
      <width>1024</width>
      <height>768</height>
      <depth>no</depth>
      <clearcolor>0,0,0</clearcolor>
      <passes>
        <pass targets="1" />
        <pass targets="1" />
      </passes>
    </renderer>
    <sound type="null">
      <volume>1.0</volume>
    </sound>
  </engine>
 
  <game>
    <attributes>
      <name>GCC Test</name>
      <startscene>1</startscene> <!-- References scene by id -->
    </attributes>

    <images>
      <image>
        <id>1</id>
        <name>Yin-Yang</name>
        <resource>yinyang.png</resource> <!-- Optional for render targets -->
      </image>
      <image>
        <id>2</id>
        <name>Car</name>
        <resource>car.png</resource> <!-- Optional for render targets -->
      </image>
    </images>
    
    <behaviors>
      <behavior>
        <id></id>
        <name></name>
        ...
      </behavior>
    </behaviors>
    
    <actortypes>
      <actortype>
        <id>1</id>
        <name>Yin-Yang</name>
        <components>
          <renderable type="mesh">
            <points>-24,24;24,24;24,-24;-24,-24</points> <!-- A list of vectors for vertex positions -->
            <texcoords>0,1;1,1;1,0;0,0</texcoords> <!-- A list of vectors for vertex texture coordinates -->
            <colors>255,255,255,255;255,255,255,255;255,255,255,255;255,255,255,255</colors> <!-- A list of colors for vertex colors -->
            <mode>Quads</mode> <!-- The mesh mode (Triangles, Quads, Line...) -->
            <image>1</image> <!-- The texture to use (image id) -->
          </renderable>
        </components>
      </actortype>
      
      <actortype>
        <id>2</id>
        <name>Car</name>
        <components>
          <renderable type="image">
            <image>2</image> <!-- The texture to use (image id) -->
            <color>255,255,255,255</color> <!-- Tint color. Can be left out for black -->
          </renderable>
        </components>
      </actortype>

      <actortype>
        <id>3</id>
        <name>Colored Lines</name>
        <components>
          <renderable type="line">
            <points>-24,24;24,24;24,-24;-24,-24</points> <!-- A list of vectors for vertex positions -->
            <colors>0,255,255,255;255,0,255,255;255,255,0,255;255,255,255,255</colors> <!-- A list of colors for vertex colors -->
            <closed>yes</closed> <!-- Determines if the last point is connected to the first point -->
            <width>2</width>
          </renderable>
        </components>
      </actortype>

      <actortype>
        <id>4</id>
        <name>Colored Points</name>
        <components>
          <renderable type="point">
            <points>-24,24;24,24;24,-24;-24,-24</points> <!-- A list of vectors for vertex positions -->
            <colors>0,255,255,255;255,0,255,255;255,255,0,255;255,255,255,255;</colors> <!-- A list of colors for vertex colors -->
            <size>4</size>
          </renderable>
        </components>
      </actortype>
    </actortypes>

    <actors>
      <actor>
        <id>1</id>
        <name>YY01</name>
        <type>3</type> <!-- References the actor type by its id -->
      </actor>
    </actors>
    
    <scenes>
      <scene>
        <id>1</id>
        <name>Main Scene</name>
        <layers>
          <layer>
            <id>1</id>
            <name>Layer 01</name>
            <nodes>
              <node>
                <actor>1</actor> <!-- References actor by id -->
                <tint>255,255,255,255</tint> <!-- Tint color -->
                <aabb>-24,-24;24,24</aabb> <!-- Min and Max values of the bounding box -->
                <transform>
                  <position>0,0</position>
                  <rotation>-10</rotation>
                  <scale>1,1</scale>
                </transform>
                <nodes>
                  ... <!-- Child nodes -->
                </nodes>
              </node>
            </nodes>
          </layer>
        </layers>
      </scene>
    </scenes>

    <!-- WIP! -->
    <actions>
      <action>
        <event>
          <attributes>            
          </attributes>
        </event>
        <process>
          <classname></classname>
          <attributes>
          </attributes>
        </process>
      </action>
    </actions>
   
  </game>
</okugame>